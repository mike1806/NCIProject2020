<%- include('./partials/header_shop') %>

<div class="row products">
    
    <% products.forEach(function(p){ %>
            <div class="col-xs-12 col-md-4 p">
                <a class="pa" href="/shop/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
                <h3><%= p.item %></h3>
                <h4>$<%= parseFloat(p.cost).toFixed(2) %></h4>
                <a class="vd" href="/shop/products/<%= p.category %>/<%= p.slug %>">slug Details</a>
            </div>
        <% }); %>
    
</div>



<%- include('./partials/footer_shop') %>