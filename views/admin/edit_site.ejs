<%- include('../partials/header_shop') %>


<h2 class="page-title">Edit site</h2>
<a href="/shop/admin/sites" class="btn btn-primary">Back to SITES</a>
<br><br>

<form method="post" action="/shop/admin/sites/edit-site/<%= id %>">
    
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    
    <div class="form-group">
        <label for="">View</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    
    <div class="form-group">
        <label for="">Content</label>
        <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
    </div>
    
    <button class="btn btn-default">Submit</button>
</form>

<%- include('../partials/footer_shop') %>